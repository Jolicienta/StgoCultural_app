                    <td><%= image_tag event.pic, style:'width: 100px; height: auto;' %></td>
                    <td><%= event.title %></td>
                    <td><%= link_to 'Editar', edit_event_path(event), class:'btn btn-success' %></td>
                    <td><%= link_to 'Eliminar', event_path(event), method: :delete, class:'btn btn-danger' %></td>
                  </tr>
                  <% end %>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
