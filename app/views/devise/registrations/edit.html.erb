  <div class="row">
    <div class="col-md-10">

      <div class="row">
        <div class="col-sm-4">
          <img src="https://pipelinepros.org/wp-content/uploads/2017/03/Missing-Headshot-Avatar-200x200.png" alt="..." class="img-thumbnail"><%= current_user.photo %>
        </div>
        <div class="col-sm-8">
          <%= current_user.bio %>
